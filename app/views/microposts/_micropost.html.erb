<ul class="well fade" style="opacity: 0.9;" id="micropost-<%= micropost.id %>">
  <div class="col-md-3">
    <%= image_tag micropost.user.avatar.url(:thumb), :class => 'circle' %>
  </div>
  <div class="col-md-9">
      <span class="user"><%= link_to micropost.user.name, show_user_path(micropost.user) %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user?(micropost.user) %>
          <%= link_to "delete", micropost, method: :delete,
                      data: { confirm: "You sure?" }, :style => 'position: absolute; right: 0px;', :class => 'btn btn-xs btn-danger', remote: true %>
        <% end %>
      </span>
  </div>
  <div class="row">
      <div class="col-md-8">
        <span class="content" style="border-top: 1px solid gray;"><%= micropost.content %></span>
      </div>
  </div>
</ul>
<script>
    $(document).on('page:change',  function() { $("#micropost-<%= micropost.id %>").addClass("in"); });
</script>