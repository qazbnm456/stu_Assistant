<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "col-md-2" %>
          <div class="col-md-10">
            <div class="form-control-wrapper">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control empty" %>
              <span class="material-input"></span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-md-2" %>
          <div class="col-md-10">
            <div class="form-control-wrapper">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control empty" %>
              <span class="material-input"></span>
            </div>
          </div>
        </div>
        <div class="form-group" style="position: relative; left: 15%; top: -30px; margin-bottom: -30px;">
            <% if devise_mapping.rememberable? %>
                <div class="checkbox">
                  <label class="col-md-10">
                    <%= f.check_box :remember_me %>
                    <span class="ripple"></span>
                    <span class="check"></span>
                    Remember me
                  </label>
                </div>
            <% end %>
        </div>

        <%= f.submit "Log in", class: "btn btn-large btn-primary" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
