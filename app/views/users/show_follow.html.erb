<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url(:thumb), :class => 'circle' %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", show_user_path(@user) %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to (image_tag user.avatar.url(:thumb), :class => 'circle'), show_user_path(user) %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
</div>